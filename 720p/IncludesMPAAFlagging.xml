<includes>
	<include name="MPAARatings">
		<control type="grouplist">
			<description>Media MPAA Flagging Images</description>
			<posx>425r</posx>
			<posy>85r</posy>
			<width>300</width>
			<align>right</align>
			<itemgap>0</itemgap>
			<orientation>horizontal</orientation>
			<visible>Container.Content(Movies) + !stringcompare(ListItem.Label,..)</visible>
