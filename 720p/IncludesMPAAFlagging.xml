				<description>Rated bbfc_u</description>
				<width>220</width>
				<height>80</height>
				<aspectratio aligny="bottom">keep</aspectratio>
				<texture>MediaFlags/ratings/UK/U.png</texture>
				<visible>substring(listitem.mpaa,UK:U)</visible>
			</control>
			<control type="image">
